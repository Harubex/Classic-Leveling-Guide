{
  "editor.indentSize": "tabSize",
  "editor.tabSize": 4,
  "git.ignoreLimitWarning": true,
  "workbench.sideBar.location": "left",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
  },
  "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true,
      "**/Thumbs.db": true,
      "**/tsconfig.*.json": true,
      "**/.git*": true,
      "**/package-lock.json": true,
      "**/pnpm-lock.yaml": true,
      "**/pnpm-workspace.yaml": true,
      "**/clg.code-workspace": true,
      "**/node_modules": true,
      "**/dist": true
  }
}